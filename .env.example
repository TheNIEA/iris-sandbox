# Example Environment Variables
# Copy this file to .env, .env.development, or .env.production and fill in your values

# Application
APP_NAME="Mayo Test App"

# API Configuration
API_TIMEOUT=30000
API_SECRET=your_api_secret_here

# Public API Configuration (available to client-side)
NUXT_PUBLIC_API_BASE_URL=https://api.example.com/api
NUXT_PUBLIC_API_VERSION=v1

# Authentication
NUXT_PUBLIC_AUTH_STORAGE_KEY=mayo_auth_token

# Application Settings
NUXT_PUBLIC_APP_MODE=development # or production
NUXT_PUBLIC_DEBUG_MODE=true # set to false in production

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_USER_PROFILES=true
NUXT_PUBLIC_ENABLE_MOCK_DATA=true # set to false in production

# AWS Configuration (for production)
NUXT_PUBLIC_AWS_REGION=us-east-1
NUXT_PUBLIC_AWS_CLOUDFRONT_URL=https://your-distribution-id.cloudfront.net
NUXT_PUBLIC_S3_BUCKET=your-s3-bucket-name

# Analytics
NUXT_PUBLIC_ANALYTICS_KEY=your_analytics_key_here